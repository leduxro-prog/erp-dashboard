{
  "name": "@cypher/security-tests",
  "version": "1.0.0",
  "description": "Security tests for IDOR prevention",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/helpers",
      "<rootDir>/idor"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "../modules/security/src/**/*.ts",
      "!../modules/security/src/**/*.d.ts",
      "!../modules/security/src/**/index.ts"
    ],
    "moduleNameMapper": {
      "@shared/*": ["../../shared/*"],
      "@modules/*": ["../../modules/*"],
      "@cypher/security": ["../../modules/security/src"]
    }
  }
}
