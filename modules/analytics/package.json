{
  "name": "@cypher-erp/analytics-module",
  "version": "1.0.0",
  "description": "Business analytics and intelligence system for CYPHER ERP",
  "main": "dist/analytics-module.js",
  "types": "dist/analytics-module.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/domain",
    "test:integration": "jest --testPathPattern=tests/application",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "typeorm": "typeorm",
    "typeorm:migration:generate": "typeorm migration:generate",
    "typeorm:migration:run": "typeorm migration:run",
    "typeorm:migration:revert": "typeorm migration:revert"
  },
  "keywords": [
    "analytics",
    "business-intelligence",
    "dashboards",
    "reporting",
    "forecasting",
    "metrics",
    "erp"
  ],
  "author": "CYPHER ERP Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "winston": "^3.11.0",
    "typeorm": "^0.3.19",
    "express": "^4.18.2",
    "bull": "^4.12.2",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/infrastructure/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
