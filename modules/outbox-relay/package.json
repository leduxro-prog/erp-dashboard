{
  "name": "@cypher-erp/outbox-relay",
  "version": "1.0.0",
  "description": "Production-ready outbox pattern relay service for Cypher ERP - reads events from Postgres and publishes to RabbitMQ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "outbox-relay": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t cypher-erp/outbox-relay:latest .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "outbox",
    "relay",
    "event-sourcing",
    "rabbitmq",
    "postgres",
    "enterprise"
  ],
  "dependencies": {
    "amqplib": "^0.10.3",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "pino-pretty": "^10.3.0",
    "pg": "^8.11.3",
    "prom-client": "^15.0.0",
    "uuid": "^9.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/amqplib": "^0.10.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "CYPHER ERP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cypher-erp/outbox-relay"
  }
}
