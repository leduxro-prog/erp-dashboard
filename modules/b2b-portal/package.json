{
  "name": "@cypher/b2b-portal",
  "version": "1.0.0",
  "description": "B2B customer portal module with registration, approval workflow, saved carts, bulk ordering, and credit management",
  "main": "dist/src/b2b-module.js",
  "types": "dist/src/b2b-module.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "b2b",
    "erp",
    "portal",
    "registration",
    "credit-management",
    "bulk-order"
  ],
  "author": "CYPHER ERP Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "typeorm": "^0.3.0",
    "winston": "^3.11.0"
  },
  "peerDependencies": {
    "typeorm": "^0.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
